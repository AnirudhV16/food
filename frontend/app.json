{
  "expo": {
    "name": "Mint",
    "slug": "Mint",
    "owner": "aavv4",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFFFFF"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mint.foodtracker",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs camera access to take photos of food product labels for ingredient analysis.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to select product images for analysis.",
        "NSPhotoLibraryAddUsageDescription": "This app needs permission to save photos to your library.",
        "NSMicrophoneUsageDescription": "This app does not use the microphone."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.mint.foodtracker",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.NOTIFICATIONS",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.RECORD_AUDIO"
      ],
      "useNextNotificationsApi": true
    },
    "web": {
      "favicon": "./assets/logo.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app needs access to your photos to upload product images for ingredient analysis.",
          "cameraPermission": "The app needs camera access to take photos of food product labels and read ingredients."
        }
      ],
      [
        "expo-notifications",
        {
          "color": "#22C55E",
          "androidMode": "default",
          "androidCollapsedTitle": "Mint"
        }
      ]
    ],
    "notification": {
      "color": "#22C55E",
      "androidMode": "default",
      "androidCollapsedTitle": "{{unread_count}} new notifications",
      "vapidPublicKey": "BG-0crfYgaukKHIAoMWIcCuo3QzfHiURzFpd_SE2WsGasw-XHZtMvTYMXBDdylLs3TzgnNYnuRRlRodVy2OPFjg"
    },
    "extra": {
      "eas": {
        "projectId": "78700775-d617-4109-9701-30007c837ab2"
      }
    }
  }
}
